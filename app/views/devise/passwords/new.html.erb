<div class="login col-md-4 offset-md-4 align-middle">
    <div class="title">
        <h1 class="text-center">
            <img class="d-block mx-auto" src="/images/woodscout.gif" />
            <div class="d-block mt-5">Create an account</div>
         </h1>
    </div>

    <div class="login-main p-3 my-3 border rounded">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field mb-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: 'form-control' %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
          </div>
        <% end %>
    </div>

    <div class="login-links p-3 my-3 border rounded">
        <%= render "devise/shared/links" %>
    </div>
</div>